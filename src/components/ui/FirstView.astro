---
const { article } = Astro.props;
---

<div class="max-w-[1440px] px-8">
  <div>
    {article.sections.map((section: any) => (
      <div class="grid grid-cols-2 items-center">
        <div>
          <h1 class="text-7xl font-bold">{section.data.titleCopy}</h1>
          <p class="mt-4 text-base" set:html={section.data.text} />
        </div>
        <p><img src={section.data.image.src} alt={section.data.image.altText} /></p>
      </div>
    ))}
  </div>
</div>